<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/detail_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="8.5"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_item_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="앱이름 잼잼"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/detail_item_subname"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="7dp"
                android:text="서브네임"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_item_star1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/detail_item_star2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                     />

                <ImageView
                    android:id="@+id/detail_item_star3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                     />

                <ImageView
                    android:id="@+id/detail_item_star4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/detail_item_star5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                     />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>