<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="15dp"
        android:background="@drawable/round_light_blue"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_item_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_weight="8.5"
                android:gravity="top|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="앱이름 잼잼"
                    android:textColor="#000000"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_item_star1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:id="@+id/detail_item_star2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:id="@+id/detail_item_star3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:id="@+id/detail_item_star4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:id="@+id/detail_item_star5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_item_download"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_darkblue"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@drawable/download"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Download"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"></LinearLayout>


</LinearLayout>