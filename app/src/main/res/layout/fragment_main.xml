<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/suggest_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="8dp"
                        android:text="Suggested Apps"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/horizon_app1"
                            android:layout_width="wrap_content"
                            android:layout_height="143dp"
                            android:layout_margin="5dp"

                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/horizon_icon1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/horizon_description1"
                                android:layout_width="84dp"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:text="Kakao Place"
                                android:textColor="#000000"
                                 />

                            <TextView
                                android:id="@+id/horizon_description1_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:text="Restaurant"
                                android:textSize="12dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/horizon_icon2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/horizon_description2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:gravity="left"
                                android:text="요기요(Yogiyo)"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/horizon_description2_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:gravity="left"
                                android:text="Food Delivery"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/horizon_icon3"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/horizon_description3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:text="Kakao T"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/horizon_description3_2"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:text="Public Transport" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/horizon_icon4"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/horizon_description4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="직방"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/horizon_description4_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:text="Real Property" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/Korean_gugu_Layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/horizon_icon5"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/horizon_description5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="대한민국 구석구석"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/horizon_description5_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:textSize="12dp"
                                android:text="travel" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E9EDF0"
                android:orientation="vertical"></LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/best_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Best Apps"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Mango_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/best_icon1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/best_description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Mango Plate"
                        android:textColor="#000000"
                        android:layout_marginLeft="3dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/best_description1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Restaurant"
                        android:layout_marginLeft="3dp"
                        android:textSize="12dp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Baemin_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/best_icon2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/best_description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="left"
                        android:text="배달의 민족"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/best_description2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="left"
                        android:text="Food Delivery"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/best_icon3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/best_description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="카카오버스"
                        android:textColor="#000000"
                        android:layout_marginLeft="3dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/best_description3_2"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="left"
                        android:text="Transport"
                        android:layout_marginLeft="3dp"
                        android:textSize="12dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E9EDF0"
                android:orientation="vertical"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/ad_t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="AD"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/ad_icon1"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/ad_allfor" />


                        <ImageView
                            android:id="@+id/ad_icon2"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/ad_jikbang" />

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>